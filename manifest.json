{
  "manifest_version": 3,
  "name": "FAB Panel Navigator",
  "version": "1.0.0",
  "description": "Floating button + panel that opens links in the current tab. Home popup shows all items stored in chrome.storage.",
  "permissions": ["storage", "tabs", "scripting", "sidePanel"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "FAB Panel"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["items-default.js", "content.js", "popup.js"],
      "css": ["sidebar.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon64.png",
    "128": "icons/icon128.png"
  }
}

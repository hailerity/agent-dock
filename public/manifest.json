{
  "manifest_version": 3,
  "name": "Agent Dock",
  "version": "1.0.0",
  "description": "Easy switch between AI agents via a floating button or floating dock in your browser.",
  "permissions": ["storage", "tabs", "scripting", "sidePanel"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Agent Dock"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["settings.js", "js/content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png", "assets/*.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
